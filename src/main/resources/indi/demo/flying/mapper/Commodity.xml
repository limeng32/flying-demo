<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.demo.flying.mapper.CommodityMapper">
	<cache />

	<select id="mySelect" resultMap="result">
		flying#{?}:select
	</select>

	<select id="mySelectAll" resultMap="result">
		flying:selectAll
	</select>

	<select id="myCount" resultType="int">
		flying:count
	</select>

	<!-- 此处调用数据库原生的获取uuid的方法，在h2_base模拟mysql情况下为RANDOM_UUID()方法，在真实mysql情况下为UUID()方法 -->
	<insert id="myInsert">
		flying:insert
		<selectKey keyProperty="id" resultType="String" order="BEFORE">
			select replace(RANDOM_UUID(), '-', '')
		</selectKey>
	</insert>

	<update id="myUpdate">
		flying:update
	</update>

	<update id="myUpdatePersistent">
		flying:updatePersistent
	</update>

	<delete id="myDelete">
		flying:delete
	</delete>

	<resultMap id="result" type="Commodity" autoMapping="true">
		<id property="id" column="ID" />
		<result property="name" column="NAME" />
		<result property="price" column="PRICE" />
	</resultMap>
</mapper>